{
  "compilerOptions": {
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2016",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowImportingTsExtensions": true,
  },
  "include": [
    "./**/*.ts",
    "package/**/*.ts",
    "package/**/*.tsx"
  ]
}